<?xml version="1.0" encoding= "UTF-8" ?>        
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.canyin.model.Shangdian">
	<resultMap id="shangdian" type="cn.canyin.model.Shangdian">
		<result column="sd_id" property="sd_id"  />
		<result column="sd_mingcheng" property="mingcheng" />
		<result column="sd_zuoweishu" property="zuoweishu" />
		<result column="sd_dizhi" property="dizhi" />
		<result column="sd_youbian"  property="youbian" />
		<result column="sd_weixinid" property="weixinid" />
		<result column="sd_youxiang" property="youxiang" />
		<result column="create_time" property="createtime" />
		<result column="update_time" property="updatetime" />
		<result column="sd_zhuren" property="dianzhu" />
	</resultMap>
	<sql id="commonColumns">
		sd_id ,sd_mingcheng ,sd_zuoweishu ,sd_dizhi ,sd_youbian ,sd_weixinid ,sd_youxiang ,create_time ,create_time ,update_time ,sd_zhuren
	</sql>
	<select id="queryById" parameterType="Long"  resultMap="shangdian">
		select<include refid="commonColumns" />
		from cy_shangdian where sd_id=#{sd_id} limit 1;
	</select>
	<select id="queryByWXId" parameterType="String"   resultMap="shangdian">
		select <include refid="commonColumns" />
		from cy_shangdian where sd_weixinid=#{sd_weixinid} ;
	</select>

	
	<insert id="insertShangdian" parameterType="cn.canyin.model.Shangdian"  useGeneratedKeys="true"  keyProperty="sd_id">
		insert into cy_shangdian(sd_id ,sd_mingcheng ,sd_zuoweishu ,sd_dizhi ,sd_youbian ,sd_dianhua  ,sd_weixinid ,sd_youxiang ,create_time ,create_time ,update_time ,sd_zhuren)
		 values(#{sd_id} ,#{sd_mingcheng},#{sd_zuoweishu} ,#{sd_dizhi} ,#{sd_youbian} ,#{sd_dianhua} ,#{sd_weixinid},#{sd_youxiang},#{create_time} ,#{create_time} ,#{update_time} ,#{sd_zhuren})
	</insert>
	
</mapper>
